{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/nest/src",
  "monorepo": true,
  "root": "apps/nest",
  "compilerOptions": {
    "webpack": true,
    "tsConfigPath": "apps/nest/tsconfig.app.json"
  },
  "projects": {
    "nest": {
      "type": "application",
      "root": "apps/nest",
      "entryFile": "main",
      "sourceRoot": "apps/nest/src",
      "compilerOptions": {
        "tsConfigPath": "apps/nest/tsconfig.app.json"
      }
    },
    "post": {
      "type": "application",
      "root": "apps/post",
      "entryFile": "main",
      "sourceRoot": "apps/post/src",
      "compilerOptions": {
        "tsConfigPath": "apps/post/tsconfig.app.json"
      }
    },
    "tag": {
      "type": "application",
      "root": "apps/tag",
      "entryFile": "main",
      "sourceRoot": "apps/tag/src",
      "compilerOptions": {
        "tsConfigPath": "apps/tag/tsconfig.app.json"
      }
    },
    "user": {
      "type": "application",
      "root": "apps/user",
      "entryFile": "main",
      "sourceRoot": "apps/user/src",
      "compilerOptions": {
        "tsConfigPath": "apps/user/tsconfig.app.json"
      }
    }
  }
}